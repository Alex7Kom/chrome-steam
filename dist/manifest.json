{
  "name": "chrome-steam",
  "description": "Test Steam Chrome App",
  "version": "0.1",
  "manifest_version": 2,
  "app": {
    "background": {
      "scripts": ["main.js"]
    }
  },
  "sockets": {
    "tcp": {
      "connect": "*"
    },
    "udp": {
      "send": "*"
    }
  },
  "permissions": [
    "storage"
  ]
}