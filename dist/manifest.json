{
  "name": "chrome-steam",
  "description": "Test Steam Chrome App",
  "version": "0.1",
  "manifest_version": 2,
  "app": {
    "background": {
      "scripts": ["steam.min.js", "example.js"]
    }
  },
  "sockets": {
    "tcp": {
      "connect": "*"
    },
    "udp": {
      "send": "*"
    }
  },
  "permissions": [
    "storage",
    "https://api.steampowered.com/"
  ]
}